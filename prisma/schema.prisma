generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ProjectStates {
  BUILDING
  ALPHA
  BETA
  LIVE
  ABANDONED
}

model Project {
  id Int @id @default(autoincrement())
  name String @db.VarChar(255)
  description String
  updates Update[]
  state ProjectStates
  likes Int
  figmaLink String @db.VarChar(255)
  githubLink String @db.VarChar(255)
  projectLink String @db.VarChar(255)
  createdAt DateTime @default(now())
}

model Update {
  id Int @id @default(autoincrement())
  title String @db.VarChar(255)
  description String
  project Project @relation(fields: [projectId], references: [id])
  projectId Int
  createdAt DateTime @default(now())
}
